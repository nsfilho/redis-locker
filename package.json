{
    "name": "@nsfilho/redis-locker",
    "version": "1.4.5",
    "main": "build/index.js",
    "type": "build/index.d.ts",
    "license": "GPL-3.0",
    "private": false,
    "dependencies": {
        "@nsfilho/redis-connection": "^0.1.10",
        "debug": "^4.3.2",
        "nanoid": "^3.1.30"
    },
    "author": {
        "name": "Nelio Souza Santos Filho",
        "email": "nsfilho@icloud.com"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nsfilho/redis-locker.git"
    },
    "homepage": "https://nsfilho.github.io/redis-locker/index.html",
    "devDependencies": {
        "@commitlint/cli": "^13.2.1",
        "@commitlint/config-conventional": "^13.2.0",
        "@types/debug": "^4.1.7",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.0.1",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "gh-pages": "^3.2.3",
        "husky": "^7.0.0",
        "jest": "^27.2.5",
        "lint-staged": "^11.2.3",
        "prettier": "^2.4.1",
        "standard-version": "^9.3.1",
        "ts-jest": "^27.0.6",
        "ts-node": "^10.3.0",
        "typedoc": "^0.22.5",
        "typescript": "^4.4.4"
    },
    "scripts": {
        "eslint": "eslint --ext \".js,.jsx,.ts,.tsx\" ./src/",
        "format": "prettier --write src/**/*.{ts,tsx,css,js,jsx} package.json",
        "build": "tsc",
        "docs": "typedoc src/index.ts",
        "prepages": "yarn docs",
        "pages": "gh-pages -d docs",
        "test:withLogs": "cross-env DEBUG=* jest --detectOpenHandles",
        "test:single": "cross-env DEBUG=* LOCKER_SINGLE_PING_THREAD=true jest --detectOpenHandles",
        "test:simple": "jest --detectOpenHandles",
        "jest": "yarn test:simple",
        "release": "standard-version",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/**/*.+(css|less|scss|md)": [
            "prettier --write"
        ],
        "src/**/*.+(js|jsx|ts|tsx)": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
